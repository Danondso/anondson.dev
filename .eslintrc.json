{
    "extends": "airbnb",
    "rules": {
        "react/jsx-filename-extension": 0,
        "max-len": ["error", { "code": 180 }],
        "comma-dangle": ["error", {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "always-multiline",
            "exports": "always-multiline",
            "functions": "never"
        }]
    },
    "overrides": [
        {
          "files": [
            "**/*.test.js",
            "**/*.test.jsx",
            "**/*.spec.js",
            "**/*.spec.jsx"
          ],
          "env": {
            "jest": true,
            "browser": true
          }
        }
      ]
}